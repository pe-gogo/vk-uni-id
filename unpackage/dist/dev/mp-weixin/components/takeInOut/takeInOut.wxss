.entrance {
  background-color: #FFFFFF;
  position: relative;
  margin-top: -80rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  box-shadow: 0 20rpx 20rpx -20rpx rgba(51, 51, 51, 0.1);
}
.entrance .item {
  position: relative;
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
}
.entrance .item:nth-child(1):after {
  content: "";
  position: absolute;
  width: 1rpx;
  background-color: #ddd;
  right: 0;
  height: 100%;
  transform: scaleX(0.5) scaleY(0.8);
}
.entrance .item .icon {
  width: 84rpx;
  height: 84rpx;
  margin: 20rpx;
}